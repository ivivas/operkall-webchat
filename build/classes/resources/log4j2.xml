<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.S} [Thread: %t] [[%l]] %-5level: %msg%n"/>
    </Console>
    
    <!-- Descomentar este bloque para generacion de log en archivo -->
    <File name="MyFile" fileName="MessengerChatKallServidor.log" immediateFlush="true" append="false">
        <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [Thread: %t] [[%l]] %-5level: %msg%n"/>
    </File>
    
  </Appenders>
  <Loggers>
      <!-- Cada bloque activa los logs de error, info y debug respectivamente. Comentar el bloque que se desee NO aparezca en los logs  -->
      <!-- Descomentar la linea comentada si se desea que ese level de error se imprima en el archivo .log -->
    <Root level="error">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="MyFile"/>
    </Root>
    <Root level="info">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="MyFile"/>
    </Root>
    <Root level="debug">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="MyFile"/>
    </Root>
    <Root level="trace">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="MyFile"/>
    </Root>
  </Loggers>
</Configuration>
